<div>
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Valores do cálculo</h3>
        <p class="mt-1 text-sm text-gray-600">
          Os valores informados irão influenciar a base de cálculo do ICMS ST
        </p>
      </div>
    </div>
    <div class="mt-5 md:mt-0 md:col-span-2">
      <%= form_with url: calculadora_path, method: :post do |f| %>
        <div class="shadow sm:rounded-md sm:overflow-hidden">
          <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
            <%= tailwind_campo_em_moeda_com_label(form: f, campo: :valor_produto, label_tag: "calculadora.valor_produto") %>
            <%= tailwind_campo_em_moeda_com_label(form: f, campo: :valor_frete, label_tag: "calculadora.valor_frete") %>
            <%= tailwind_campo_em_moeda_com_label(form: f, campo: :valor_seguro, label_tag: "calculadora.valor_seguro") %>
            <%= tailwind_campo_em_moeda_com_label(form: f, campo: :valor_outras_despesas, label_tag: "calculadora.valor_outras_despesas") %>
            <%= tailwind_campo_em_moeda_com_label(form: f, campo: :valor_descontos, label_tag: "calculadora.valor_descontos") %>
            <%= tailwind_campo_em_percentual_com_label(form: f, campo: :mva, label_tag: "calculadora.mva") %>
          </div>
          <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
            <%= f.submit "Calcular", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>